<% if @carte.errors.any? %>
  <ul>
  <% @carte.errors.each do |error| %><li><%= error %></li><% end %>
  </ul>
<% end %>

<form action="/carte/<%= @carte.id %>" method="post">
  <input id="_method" name="_method" type="hidden" value="put" />
  <fieldset class="sixteen columns">
    <div class="five columns alpha">
      <label for="carte">Carte en cours</label>
    </div>
    <div class="eleven columns omega">
      <img src="/cartes/<%= @carte_src %>.jpg" width="280px" height="200px" />
    </div>
    <div class="five columns alpha">
      <label for="titre">Titre de la carte *</label>
    </div>
    <div class="eleven columns omega">
      <input id="titre" name="carte[titre]" type="text" value="<%= @carte.titre %>" />
    </div>
    <p class="offset-by-five eleven columns alpha">
      <input type="submit" value="Enregistrer cette carte" />
      <a href="/">Annuler</a>
    </p>
  </fieldset>
</form>